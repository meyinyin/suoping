<body>
    <div class="page-content-wrap">
        <form class="layui-form" action="/Manger/ProEdit/@Model.ID" method="post">
            <div class="layui-tab" style="margin: 0;">
                <ul class="layui-tab-title">
                    <li><a href="/Manger/Product">产品列表</a></li>
                    <li class="layui-this">产品详情</li>
                </ul>
                <div class="layui-tab-content">
                    <div class="layui-tab-item"></div>
                    <div class="layui-tab-item layui-show">
                        <div class="layui-form-item">
                            <label class="layui-form-label">产品名：</label>
                            <div class="layui-input-block">
                                <input type="text" name="Title" required lay-verify="required" placeholder="请输入产品名" autocomplete="off" class="layui-input" value="@Model.Title">
                            </div>
                        </div>


                        <div class="layui-form-item">
