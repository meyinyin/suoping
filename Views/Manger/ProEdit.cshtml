        });
        $('#PicUpload').uploader({
            onFileUploaded: function (file, res) {
                if (file) {
                    var ret = $.parseJSON(res.response);
                    $('#PicURL').val('/uploadshop/' + ret.Data);
                };
            }
        });
        $('#PicUpload1').uploader({
            onFileUploaded: function (file, res) {
