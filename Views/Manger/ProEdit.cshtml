                                  <div class="layui-input-block">
                                      <textarea id="Info" name="Info" class="form-control kindeditor" style="height:150px;">@Model.Info</textarea>
                                  </div>
                              </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">关键字：</label>
                            <div class="layui-input-block">
                                <input type="text" name="KeyWord" placeholder="请输入关键字" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.KeyWord">
                            </div>
                        </div>
                        <div class="layui-form-item layui-form-text">
                            <label class="layui-form-label">产品描述：</label>
                            <div class="layui-input-block">
                                <textarea placeholder="请输入内容" name="Description" class="layui-textarea">@Model.Description</textarea>
                            </div>
