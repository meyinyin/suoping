<!-- CONTACT PART START -->
<div class="contact-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <div class="personal-info-box">
                    <div class="icon"><i class="fas fa-phone-alt"></i></div>
                    @foreach (var phone in list) { 
                <p>电话: <a href="callto:@phone.Phone">@phone.Phone</a></p>
                    }
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <div class="personal-info-box">
                    <div class="icon"> <i class="fas fa-envelope"></i></div>
                    @foreach (var email in list)
                    {
                        <p>邮箱: <a href="mailto:@email.avg4">@email.avg4</a></p>
                    }
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <div class="personal-info-box">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                    @foreach (var adress in list)
                    {
                        <p>地址: <a href="javascript:;">@adress.Adress</a></p>
                    }

                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-lg-7">
                <div class="get-touch">
                    @*<h3>Get in touch</h3>*@
                    <form action="/Home/Contact/" method="post">
                        <div class="row mt-4">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                <input required type="text" class="form-control touch-info" id="first-name" name="MName" placeholder="姓名" />
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                <input required type="text" class="form-control touch-info" id="last-name" name="avg2" placeholder="电话" />
                            </div>

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                <input required type="email" class="form-control touch-info" id="email" name="MEmail" placeholder="邮箱" />
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                <input required type="text" class="form-control touch-info" id="phone" name="MAdress" placeholder="地址" />
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                <textarea required class="form-control touch-textarea" id="message:" name="MContent" placeholder="此处留言"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="MDate" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss")" />
                            </div>
                        </div>

                        <div class="col-xl-8.col-lg-12.col-md-12.col-sm-12">
                            <button type="submit" class="btn submit">提交 <i class="fas fa-long-arrow-alt-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="location-box">
                    @*<h3>Loacation check here</h3>*@
                    <div class="lxwm_t">
                        <div id="container" style="width:auto; height: 333px;margin: auto;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- CONTACT PART END -->

